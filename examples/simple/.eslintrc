{
  "root": true,
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [ "babel" ],
  "rules": {
    "max-len": 0,
    "comma-dangle": [
      2,
      "never"
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "never"
    ],
    "arrow-parens": [2, "always"],
    "no-console": 1,
    "react/react-in-jsx-scope": 0,
    "react/jsx-curly-spacing": [2, "always"],
    "no-unused-vars": [2, {"varsIgnorePattern": "h"}],
    "react/prop-types": 0,
    "brace-style": ["error", "stroustrup"],
    "jsx-a11y/no-static-element-interactions": 0,
    "react/sort-comp": 0
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "browser": true
  }
}
